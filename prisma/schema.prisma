generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email        String    @unique
  passwordHash String
  id           Int       @id @default(autoincrement())
  sessions     Session[]
  cart     Cart?
}

model Session {
  id        String   @id
  userId    Int
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CartLineItem {
  id              String @id
  sanityProductId String
  quantity        Int

  title String
  price Float
  image String

  cartId String
  cart   Cart   @relation(references: [id], fields: [cartId], onDelete: Cascade)
}

model Cart {
  id String @id

  userId Int?  @unique
  user   User? @relation(references: [id], fields: [userId], onDelete: Cascade)

  items CartLineItem[]
}

